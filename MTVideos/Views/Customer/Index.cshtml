@model IEnumerable<MTVideos.Models.Customer>
@{
    ViewBag.Title = "Index";
}
<br />
    @Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" })


<h2>Customers</h2>


<table id="customers" class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Customer</th>
                <th>Type Of Membership</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id}, null)</td>
                    <td>@customer.MembershipType.TypeOfMembership</td>
                    <td>
                        <button data-customer-id="@customer.Id" class="btn-link js-detele">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-detele").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                })                                 
            });
        });
    </script>  
    
}




